{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "hkr:pg:parser:generate": {
      "dependsOn": ["^hkr:pg:parser:generate"],
      "inputs": ["packages/hkr-lang/src/parser/*.g4"],
      "outputs": ["packages/hkr-lang/src/parser/*.ts"]
    }
  }
}
